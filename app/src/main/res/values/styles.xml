<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NavigatorIcon">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="background">@android:color/transparent</item>

    </style>

    <style name="NavigatorText" parent="Base.Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ProfilePictureCorners" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorOnSurface">@android:color/holo_green_dark</item>
    </style>

</resources>