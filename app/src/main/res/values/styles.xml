<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="buttonStyle">@style/MaterialButtonDefaultStyle</item>
    </style>


    <style name="NavigatorIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="background">@android:color/transparent</item>

    </style>

    <style name="NavigatorText" parent="Base.Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ProfilePictureCorners" parent="">
        <item name="cornerSize">15%</item>
    </style>



    <style name="MaterialButtonDefaultStyle" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">14dp</item>
    </style>

    <style name="FormRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12dp</item>
        <item name="autoSizeMaxTextSize">18dp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="buttonCompat">@android:color/transparent</item>
        <item name="maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="FormTextLabel" parent="Widget.AppCompat.TextView">
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">28sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="color">@color/colorPrimaryDark</item>
    </style>


</resources>