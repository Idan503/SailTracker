<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    tools:context=".firebase.LoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginTop="10dp"
        android:text="@string/add_event_title"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:autoSizeTextType="uniform"
        android:padding="10dp"
        android:id="@+id/add_event_LBL_title"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_event_LBL_title"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/add_event_RAT_select_type"
        app:layout_constraintDimensionRatio="h,3:1"
        android:weightSum="3"
        android:padding="5dp"
        >

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/add_event_RBTN_free_event"
            android:background="@android:color/holo_green_light"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="@string/free_event"
            android:autoSizeTextType="uniform"
            android:lines="1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/add_event_RBTN_members_sail"
            android:background="@android:color/holo_green_light"
            android:text="@string/members_sail"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:padding="5dp"
            android:layout_margin="5dp"

            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/add_event_event_RBTN_guided_sail"
            android:background="@android:color/holo_green_light"
            android:layout_margin="5dp"
            android:text="@string/guided_sail"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:padding="5dp"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        app:layout_constraintHeight_percent="0.1"
        android:id="@+id/add_event_LAY_name"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/add_event_RAT_select_type"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="@string/add_event_name_label"
            android:autoSizeTextType="uniform"
            android:padding="3dp"
            android:gravity="center"
            android:lines="1"
            />


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:id="@+id/add_event_EDT_name"
            android:hint="@string/add_event_name_hint"
            android:gravity="center"
            android:autofillHints="@string/add_event_name_label"
            android:layout_margin="15dp"
            android:inputType="text"
            android:ems="12"
            android:autoSizeTextType="uniform"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:id="@+id/add_event_LAY_time"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/add_event_LAY_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <TimePicker
            android:id="@+id/add_event_TP_start"
            android:layout_height="match_parent"
            android:layout_width="20dp"
            android:layout_weight="1"
            android:timePickerMode="clock"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="@string/dash"
            android:gravity="center"
            android:autoSizeTextType="uniform"

            />

        <TimePicker
            android:id="@+id/add_event_TP_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:timePickerMode="clock"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:id="@+id/add_event_LAY_price_and_participants"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/add_event_LAY_time"
        android:layout_marginTop="20dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:ems="4"
            android:id="@+id/add_event_EDT_price"
            android:hint="@string/add_event_max_participants"
            android:lines="1"
            android:maxLines="1"
            android:inputType="number"
            android:autofillHints="0"
            android:gravity="center"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:ems="4"
            android:hint="@string/price"
            android:inputType="number"
            android:autofillHints="0"
            android:gravity="center"
            android:lines="1"
            android:id="@+id/add_event_EDT_max_participants"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            />


    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_event_LAY_price_and_participants"
        app:layout_constraintBottom_toTopOf="@+id/add_event_BTN_finish"
        android:lines="2"
        android:maxLines="2"
        android:inputType="textMultiLine"
        android:hint="@string/add_event_description"
        android:layout_margin="20dp"
        />




    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintDimensionRatio="1.8:1"
        android:layout_marginTop="20dp"
        android:text="@string/add"
        android:autoSizeTextType="uniform"
        android:padding="20dp"
        android:id="@+id/add_event_BTN_finish"
        />

</androidx.constraintlayout.widget.ConstraintLayout>