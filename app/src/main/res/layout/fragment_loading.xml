<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoadingFragment"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:gravity="center"
    android:alpha="0.9"
    android:weightSum="1">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.5"
        android:src="@drawable/ic_loading"
        android:contentDescription="@string/loading"
        android:id="@+id/loading_IMG_spinner"
        android:padding="5dp"
        android:alpha="0.8"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/ic_sailing_boat_white"
        android:padding="5dp"
        android:id="@+id/loading_IMG_app_icon"
        android:contentDescription="@string/loading"
        android:alpha="0.8"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/loading_IMG_spinner"
        android:text="@string/loading"
        android:gravity="center"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeTextType="uniform"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/loading_LBL_text"
        android:textColor="@android:color/white"
        android:alpha="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>