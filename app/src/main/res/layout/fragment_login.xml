<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    tools:context=".fragments.LoginFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginTop="50dp"
        android:id="@+id/login_LBL_message"
        android:text="@string/log_in_message"
        android:autoSizeTextType="uniform"
        android:padding="10dp"
        android:gravity="center"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_LBL_message"
        android:autoSizeTextType="uniform"
        android:id="@+id/login_EDT_phone_box"
        android:inputType="phone"
        android:hint="@string/example_phone"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:autofillHints="0"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintDimensionRatio="1.5:1"
        android:layout_marginTop="20dp"
        android:text="@string/next"
        android:autoSizeTextType="uniform"
        android:padding="20dp"
        android:id="@+id/login_BTN_next"


        />

</androidx.constraintlayout.widget.ConstraintLayout>