<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/home_INV_1"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_INV_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_INV_2"
            android:contentDescription="@string/app_name"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/home_IMG_logo"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_IMG_logo"
            android:id="@+id/home_INV_2"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@id/home_INV_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_INV_3"
            android:id="@+id/home_FRAG_profile"
            android:name="com.idan_koren_israeli.sailtracker.home.ProfileFragment"
            tools:layout="@layout/fragment_profile_card"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_FRAG_next_sailing"
            android:id="@+id/home_INV_3"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_INV_4"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:name="com.idan_koren_israeli.sailtracker.home.NextSailFragment"
            tools:layout="@layout/fragment_next_sail_card"
            android:id="@+id/home_FRAG_next_sailing"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/home_INV_4"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Navigation Bar -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/home_FRAG_navigator_bar"
        android:name="com.idan_koren_israeli.sailtracker.common.NavigationBarFragment"
        tools:layout="@layout/fragment_navigation_bar" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2191919"
        android:weightSum="1"
        android:orientation="vertical"
        android:id="@+id/home_LAY_login"
        android:gravity="center"
        >


        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:layout_margin="40dp"
            android:id="@+id/home_FRAG_login"
            android:name="com.idan_koren_israeli.sailtracker.home.LoginFragment"
            tools:layout="@layout/fragment_login"
            />


    </LinearLayout>


</FrameLayout>