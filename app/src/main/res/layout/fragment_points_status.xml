<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:context=".fragment.PointsStatusFragment">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_points_wheel"
        android:id="@+id/points_status_IMG_points_logo"
        android:contentDescription="@string/points"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:padding="4dp"
        android:gravity="center|start"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="12sp"
        android:textSize="22sp"
        android:text="@string/number_00"
        android:lines="1"
        android:autoSizeTextType="uniform"
        android:id="@+id/points_status_LBL_points_count"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/points_status_LBL_points_count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:icon="@drawable/ic_baseline_add_circle_24"
        android:background="@android:color/transparent"
        app:iconSize="30dp"
        app:iconPadding="0dp"
        android:padding="0dp"
        app:iconGravity="textStart"
        app:iconTint="@color/colorPrimary"
        android:layout_margin="5dp"
        android:id="@+id/points_status_BTN_add"
        />


</LinearLayout>