<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.GalleryActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/gallery_INV_1"
            app:layout_constraintHeight_percent="0.1"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            android:name="com.idan_koren_israeli.sailtracker.fragments.ProfileFragment"
            app:layout_constraintTop_toBottomOf="@id/gallery_INV_1"
            tools:layout="@layout/fragment_profile_card"
            android:id="@+id/gallery_FRAG_profile"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/gallery_FRAG_profile"
            android:id="@+id/gallery_INV_2"
            app:layout_constraintHeight_percent="0.05"
            />
        
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gallery_INV_2"
            app:layout_constraintHeight_percent="0.6"
            android:id="@+id/gallery_FRAG_collectio"
            android:name="com.idan_koren_israeli.sailtracker.fragments.PhotoCollectionFragment"
            tools:layout="@layout/fragment_photo_collection"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/ic_baseline_photo_camera_24"
            android:tint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="25dp"
            android:id="@+id/gallery_FAB_add_photo"
            android:contentDescription="@string/take_photo"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Navigation Bar -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/home_FRAG_navigator_bar"
        android:name="com.idan_koren_israeli.sailtracker.fragments.NavigationBarFragment"
        tools:layout="@layout/fragment_navigation_bar" />

</LinearLayout>